@import "../../assets/style/stylus/variable.styl"
@import "../../assets/style/stylus/mixin.styl"

.search-list
  .search-item
    display: flex
    align-items: center
    height: 40px
    overflow: hidden
    &.list-enter
      height 0
    &.list-enter-active
      height 40px
      transform all 0.1s
    &.list-exit
      height 40px
    &.list-exit-active
      height 0
      transition: all 0.1s
    .text
      flex: 1
      color: $color-text-l
    .icon
      extend-click()
      .icon-delete
        font-size: $font-size-small
        color: $color-text-d